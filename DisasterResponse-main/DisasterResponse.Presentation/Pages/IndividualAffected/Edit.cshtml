@page
@model DisasterResponse.Presentation.Pages.IndividualAffected.EditModel
@{
}
<partial name="_Message" />
<div>
    <h3>Edit An Affected Individual</h3>
    <form asp-action="Edit">
        <input type="hidden" asp-for="IndividualAffected.Id" class="form-control" />
        <div class="form-group my-2">
            <label asp-for="IndividualAffected.Name" /> Full Name </label>
            <input asp-for="IndividualAffected.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="IndividualAffected.Name"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="IndividualAffected.BirthDate" /> Birth Date </label>
            <input asp-for="IndividualAffected.BirthDate" class="form-control" />
            <span class="text-danger" asp-validation-for="IndividualAffected.BirthDate"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="IndividualAffected.DamageCases" /> Damage Cases </label>
            <input asp-for="IndividualAffected.DamageCases" class="form-control" />
            <span class="text-danger" asp-validation-for="IndividualAffected.DamageCases"></span>
        </div>
        <div class="my-2">
            <button class="btn btn-primary">Update</button>
            <a asp-page="DisplayAll" class="btn btn-info">All Records</a>
        </div>
    </form>
</div>